//STEP1    EXEC PGM=ADRDSSU
//DASD     DD  UNIT=3390,VOL=SER=vvvvvv,DISP=SHR
//TAPE     DD  DSN=BACKUP.XDI,DISP=(,KEEP),
//             UNIT=3480,LABEL=(1,SL,EXPDT=98000),
//             VOL=SER=CAIXDI
//SYSPRINT DD  SYSOUT=*
//SYSIN    DD  *
  RESTORE DATASET(INCL(CAI.XDI*.**)) -
       RENAME(CAI,newhlq) -
       INDDNAME(TAPE) -
       OUTDDNAME(DASD) -
       SHR -
       REPLACE
